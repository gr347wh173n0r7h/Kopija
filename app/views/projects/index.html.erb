<div class="ProjectIndex all-100 half-top-space">
  <div class="ink-grid">
    <div class="push-center">
      <div class="column-group all-100 push-center padding">

        <% if flash[:danger] %>
            <div class="column-group all-100 push-center push-middle">
              <div class="ink-alert basic success all-100">
                <button class="ink-dismiss">&times;</button>
                <p><%= flash[:danger] %></p>
              </div>
            </div>
        <% end %>

        <div class="Create column-group all-100 left-padding right-padding half-top-padding half-bottom-padding bottom-space push-center">
          <div class="all-50 align-left push-middle" >
            <h4>Create a Project</h4>
          </div>
          <div class="all-50 align-right push-middle half-top-padding" >
            <%= button_to "Create Project", new_project_path, :method => :get, class: "ink-button blue all-30" %>
          </div>
        </div>

          <div class="Projects all-100 ">
            <div class="column-group all-100 push-center top-padding bottom-padding">
              <h1>Current Projects</h1>
            </div>
            <div class="column-group horizontal-gutters push-center">
              <% @projects.each do |a| %>
                  <div class="ProjectCardHolder all-25 medium-30 small-50 tiny-100 half-bottom-space">
                    <div class="ProjectCard padding half-bottom-space">
                      <div class="all-100">
                        <div class="all-100 half-left-padding half-right-padding ">
                          <div class="all-100 align-center top-padding push-bottom">
                            <div class="Title all-100 "><h3><%= link_to a.title, project_path(a)%></h3></div>
                            <div class="Desc half-top-padding">
                                <p><%= a.sub_title %></p>
                                <p><%= a.desc %></p>
                                <p>Number of Mumbers: <%= a.num_people%></p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>